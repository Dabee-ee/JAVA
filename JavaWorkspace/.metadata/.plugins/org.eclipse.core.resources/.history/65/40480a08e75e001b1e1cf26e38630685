	package com.kh.op.test;

	public class B_논리부정연산자 {
		// ! 논리값( true / false ) : 해당 결과를 반대로 뒤집는 연산자
		// ex) !(메로나, 바밤바, 하겐다즈, 빵빠레, 비비빅, 쿠앤크)
		
			public void test1() {
				// 간단 결과 확인
				System.out.println("true의 부정 : " + !true);
				System.out.println("false의 부정 : " + !false);
				
				// 정수 하나를 엽력 받아,
				// 해당 숫자가 5의 배수인지 확인하는 
				// 코드를 작성하여라!
				System.out.print("정수 한 개 입력 : ");
				
				Scanner sc = new Scanner(System.in);
				
				int num = sc.nextInt();
				
				System.out.println("입력한 정수가 5의 배수인가요? " + ( num % 5 == 0 ));
				
			}
			
		}
	}



