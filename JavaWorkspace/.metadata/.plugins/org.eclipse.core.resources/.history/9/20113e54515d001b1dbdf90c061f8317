// 변수를 사용하는 방법은 2가지가 있다.
// 변수를 '선언과 동시에' 초기화 하는 방법과
// 변수를 '선언 후 초기화' 하는 방법이다.

// Prac3은 '선언 후 초기화'하는 방법이다.

// int age;
// age = 100; 
// 위와 같이 변수 선언과 넣을 값을 따로 선언해준다.


package com.kh.var;

public class Prac3 {
	

	public static void method1() {
	
		String name;
		char sex;
		int PassportNo;
		short  CustomerNumber;
		long TicketNumber;
		byte GateNumber;
		float BaggageWeight;
		boolean AditionalFee;	
		double detailedFee;
		
		name = "노다비";
		sex = 'F';
		PassportNo = 456789;
		CustomerNumber = 123;
		TicketNumber = 922337203 ;
		GateNumber = 33;
		BaggageWeight = 8.9f;
		AditionalFee = true;	
		detailedFee= 3.65;

	

		
		System.out.println("Name : " +  name);
		System.out.println("Sex : " + sex);
		System.out.println("Passport No : " + PassportNo);
		System.out.println("Customer Number : " + CustomerNumber);
		System.out.println("Ticket Number : " + TicketNumber);
		System.out.println("Gate Number : " + GateNumber);
		System.out.println("Baggage Weight : " + BaggageWeight);
		System.out.println("Aditional Fee : " + AditionalFee);
		System.out.println("Detailed Fee : " + detailedFee + "  dollars");
		
	}
	

}
