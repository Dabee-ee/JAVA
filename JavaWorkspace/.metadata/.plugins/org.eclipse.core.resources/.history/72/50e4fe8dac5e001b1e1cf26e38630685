// 1. 패키지 생성
package com.kh.var;

// 2. 클래스 생성
//    - 앞 글자는 대문자
//    - 클래스의 이름은 파일의 이름과 동일해야 함
public class TestVariable {

	// 기능 제공 메소드 만들기
	public void method1() { // -- method1() 시작!
		
		// 일반 데이터 출력
		System.out.println(200);
		System.out.println(20000);
		System.out.println(2000000);
		
		// --------------------------------- //
		
		// 변수 사용 시
		// 공간(변수) <- 값
		// 우측의 값을 좌측의 공간에 넣어라(대입해라)
		int money = 200;
		
		System.out.println(money);
		System.out.println(money);
		System.out.println(money);
		
	} // -- method1() 종료!
	
	public void method2() {
		// 변수 선언 기능 테스트
		/*
		// 1. 변수 선언 ( 프로필 작성하기 )
		// 자료형(type) 변수명;
		String name;  // 이름                - 문자열 (String)
		int age;      // 나이                - 정수 (int)
		String hobby; // 취미                - 문자열 (String)
		char gender;  // 성별                - 문자 (char)
		double height;// 신장(키)            - 실수 (double)
		boolean pet;  // 반려동물 여부       - 논리 (boolean)
		
		// 2. 선언한 변수에 값 대입하기
		// 공간명 = 값;
		name = "홍길동";
		age = 10;
		hobby = "음주 코딩";
		gender = '남';
		height = 180.5;
		pet = true;     // true / false
		*/
		
		// 선언과 동시에 초기화하는 방법
		String name = "홍길동";
		int age = 10;
		String hobby = "음주 코딩";
		char gender = '남';
		double height = 180.5;
		boolean pet = true; 
		
		// 3. 변수 공간의 값 꺼내오기
		System.out.println( name );
		System.out.println( age );
		System.out.println( hobby );
		System.out.println( gender );
		System.out.println( height );
		System.out.println( pet );
	}
	
	// 실습 1
	public void myMethod() {
		// 자료형 int, double, String, boolean 을
		// 사용하여 변수 공간 직접 만들어 보기
		// 도서명, 가격, 할인율(0.1), 재고유무
		// 위의 값을 바탕으로 변수를 선언하여
		// 값을 대입하고 화면에 출력하는 코드를
		// 작성해 보세요.
		
		// 1. 변수 선언                         
		String aaaaa;                  			String title;  // 도서명
		int bbbb;                       		int price;      // 가격
		double ccccc;                   		double discount; // 할인율
		boolean abcd;             				boolean instock;  // 재고유무
		                                          		
		// 2. 선언한 변수에 값 대입하기         
		aaaaa = "어린왕자";                     title = "어린왕자";
		bbbb = 15000;                           price = 15000;
		ccccc = 0.1;                            discount = 0.1;
		abcd = true;                            instock = true;

		// 3. 변수 공간의 값 꺼내오기          
		System.out.println( aaaaa );            System.out.println( title );
		System.out.println( bbbb );             System.out.println( price );
		System.out.println( ccccc );            System.out.println( discount );
		System.out.println( abcd );             System.out.println( instock );
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	

}
